<MainScreen>: #Дизайн основной страницы приложения
    GridLayout:
        rows: 5
        spacing: "24dp"
        MDTopAppBar:
        	title: 'Нестандартный конвертер чисел'
        	left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        	elevation: 2
        MDLabel:
        	halign: "center"
            text: 'Нестандартный конвертер чисел'
            font_size: '24sp'
        MDLabel:
            id: result_main
            halign: "center"
            font_size: '24sp'
        MDTextField:
            id: number_input
            hint_text: "Введите число"
            multiline: False
            input_filter: "int"
            mode: "fill"
            helper_text: "Число должно быть целое"
        GridLayout:
        	rows: 4
        	cols: 2
            spacing: "12dp"
            padding: dp(10)
        	MDRaisedButton:
        		size_hint: 1,1
            	text: 'Римская система'
            	font_size: '15sp'
                on_press: root.convertRome()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Морзе'
            	font_size: '15sp'
                on_press: root.convertMorse()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Система Мали'
            	font_size: '15sp'
                on_press: root.convertMali()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Система Аламбак'
            	font_size: '15sp'
                on_press: root.convertAlambak()
            MDRaisedButton:
                size_hint: 1,1
                text: 'Система Цоциль'
                font_size: '15sp'
                on_press: root.convertTsotsil()
            MDRaisedButton:
                size_hint: 1,1
                text: 'Система Майя'
                font_size: '15sp'
                on_press: root.convertMaya()

    MDNavigationDrawer: #Меню
        id: nav_drawer
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                text: "Меню навигации"
                font_style: "Subtitle1"
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: "Главная"
                        on_press:root.openMainScreen()
                        IconLeftWidget:
                            icon: "home"
                            on_press:root.openMainScreen()
                    OneLineIconListItem:
                        text: "Обычные преобразования"
                        on_press:root.openBasic()
                        IconLeftWidget:
                            icon: "numeric"
                            on_press:root.openBasic()
                    OneLineIconListItem:
                        text: "Температура"
                        on_press:root.openTemp()
                        IconLeftWidget:
                            icon: "coolant-temperature"
                            on_press:root.openTemp()
                    OneLineIconListItem:
                        text: "Темная/светлая тема"
                        on_press: app.switchThemeStyle()
                        IconLeftWidget:
                            icon: "theme-light-dark"
                            on_press: app.switchThemeStyle()
                    OneLineIconListItem:
                        text: "О приложении"
                        on_press:root.openAbout()
                        IconLeftWidget:
                            icon: "account-question"
                            on_press:root.openAbout()

<BasicScreen>: #Дизайн страницы стандартных вычислений
    GridLayout:
        rows: 5
        spacing: "12dp"
        paddint: "24dp"
        MDTopAppBar:
            title: 'Нестандартный конвертер чисел'
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            elevation: 2
        MDLabel:
            halign: "center"
            text: 'Стандартные преобразования'
            font_size: '24sp'
        MDLabel:
            id: result_basic
            halign: "center"
            font_size: '24sp'
        MDTextField:
            id: number_input
            hint_text: "Введите число"
            multiline: False
            mode: "fill"
            width: root.width*0.4
            helper_text: "Число должно быть с указателем (префиксом)"
        GridLayout:
            rows: 4
            cols: 2
            spacing: "12dp"
            padding: dp(10)
            MDRaisedButton:
                size_hint: 1,1
                text: 'Двоичная'
                font_size: '15sp'
                on_press: root.convert(1, number_input.text)
            MDRaisedButton:
                size_hint: 1,1
                text: 'Восьмеричная'
                font_size: '15sp'
                on_press: root.convert(2,number_input.text)
            MDRaisedButton:
                size_hint: 1,1
                text: 'Десятичная'
                font_size: '15sp'
                on_press: root.convert(3,number_input.text)
            MDRaisedButton:
                size_hint: 1,1
                text: 'Шестнадцатеричная'
