                font_style: "Subtitle1"
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: "Главная"
                        on_press:root.openMainScreen()
                        IconLeftWidget:
                            icon: "home"
                            on_press:root.openMainScreen()
                    OneLineIconListItem:
                        text: "Обычные преобразования"
                        on_press:root.openBasic()
                        IconLeftWidget:
                            icon: "numeric"
                            on_press:root.openBasic()
                    OneLineIconListItem:
                        text: "О приложении"
