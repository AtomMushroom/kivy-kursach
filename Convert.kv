                font_style: "Subtitle1"
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: "Главная"
                        on_press:root.openMainScreen()
                        IconLeftWidget:
                            icon: "home"
                            on_press:root.openMainScreen()
