<AboutScreen>:
    GridLayout:
        rows: 3
        MDTopAppBar:
            title: 'Нестандартный конвертер чисел'
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            elevation: 2
        MDLabel:
            halign: "center"
            text: 'Конвертер чисел в нестандартные системы счисления'
            font_size: '24sp'
        GridLayout:
            rows: 3
            cols: 1
            MDLabel:
                halign: "center"
                text: 'Приложение разработано на языке Python с использованием фреймворков Kivy и KivyMD'
                font_size: '24sp'
            MDLabel:
                halign: "center"
                text: 'Проект создан в рамках курсовой работы, апрель-май 2023'
                font_size: '24sp'
            GridLayout:
                rows: 2
                cols: 3
                Button:
                    background_color: 0, 0, 0, 0
                    size_hint: 1,1
                    on_press: root.openSite(1)
                    Image:
                        source: 'logos/logo-python.png'
                        center: (self.parent.center_x, self.parent.center_y)
                Button:
                    background_color: 0, 0, 0, 0
                    size_hint: 1,1
                    on_press: root.openSite(2)
                    Image:
                        source: 'logos/logo-kivy.png'
                        center: (self.parent.center_x, self.parent.center_y)
                Button:
                    background_color: 0, 0, 0, 0
                    size_hint: 1,1
                    on_press: root.openSite(3)
                    Image:
                        source: 'logos/logo-kivymd.png'
                        center: (self.parent.center_x, self.parent.center_y)
                MDLabel:
                    halign: "center"
                    text: 'Python 3'
                MDLabel:
                    halign: "center"
                    text: 'Kivy'
                MDLabel:
                    halign: "center"
                    text: 'KivyMD'

    MDNavigationDrawer: #Меню
        id: nav_drawer
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
