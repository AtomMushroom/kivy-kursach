<MainScreen>: #Дизайн основной страницы приложения
    GridLayout:
        rows: 5
        spacing: "24dp"
        MDTopAppBar:
        	title: 'Нестандартный конвертер чисел'
        	left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        	elevation: 2
        MDLabel:
        	halign: "center"
            text: 'Нестандартный конвертер чисел'
            font_size: '24sp'
        MDLabel:
            id: result_main
            halign: "center"
            font_size: '24sp'
        MDTextField:
            id: number_input
            hint_text: "Введите число"
            multiline: False
            input_filter: "int"
            mode: "fill"
            helper_text: "Число должно быть целое"
        GridLayout:
        	rows: 4
        	cols: 2
            spacing: "12dp"
        	MDRaisedButton:
        		size_hint: 1,1
            	text: 'Римская система'
            	font_size: '15sp'
                on_press: root.convertRome()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Морзе'
            	font_size: '15sp'
                on_press: root.convertMorse()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Система Мали'
            	font_size: '15sp'
                on_press: root.convertMali()
            MDRaisedButton:
            	size_hint: 1,1
            	text: 'Система Аламбак'
            	font_size: '15sp'
                on_press: root.convertAlambak()
            MDRaisedButton:
                size_hint: 1,1
                text: 'Система Цоциль'
                font_size: '15sp'
                on_press: root.convertTsotsil()
            MDRaisedButton:
                size_hint: 1,1
                text: 'Система Майя'
                font_size: '15sp'
                on_press: root.convertMaya()

    MDNavigationDrawer: #Меню
        id: nav_drawer
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                text: "Меню навигации"
                font_style: "Subtitle1"
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: "Главная"
                        on_press:root.openMainScreen()
                        IconLeftWidget:
                            icon: "home"
                            on_press:root.openMainScreen()
                    OneLineIconListItem:
                        text: "Обычные преобразования"
                        on_press:root.openBasic()
                        IconLeftWidget:
                            icon: "numeric"
                            on_press:root.openBasic()
                    OneLineIconListItem:
                        text: "О приложении"
                        on_press:root.openAbout()
                        IconLeftWidget:
                            icon: "account-question"
                            on_press:root.openAbout()

